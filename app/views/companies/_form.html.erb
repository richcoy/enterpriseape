<div class="row">
  <%= form_for @company, html: {class: 'form-horizontal'} do |f| %>
    <% if @company.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

        <ul>
        <% @company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: 'control-label' %><br>
      <div class="controls">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :manager, class: 'control-label' %><br>
      <div class="controls">
        <%= f.text_field :manager, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :status, class: 'control-label' %><br>
      <div class="controls">
        <%= f.text_field :status, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :terms, class: 'control-label' %><br>
      <div class="controls">
        <%= f.number_field :terms, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit 'Submit', class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
